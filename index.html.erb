<html>
  <head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8">

    <title>Saracatunga</title>
    <link rel="stylesheet" media="screen" href="/assets/bootstrap.css" />
  </head>
<body>
  <ul class="nav nav-tabs" role="tablist">
    <li class="nav-item" role="presentation">
      <a class="nav-link active" href="#wifi" role="tab" data-toggle="tab">Wifi</a>
    </li>
    <li class="nav-item" role="presentation">
      <a class="nav-link" href="#internet" role="tab" data-toggle="tab">Internet</a>
    </li>
    <li class="nav-item" role="presentation">
      <a class="nav-link" href="#habitacion" role="tab" data-toggle="tab">AP Habitaci칩n</a>
    </li>
    <li class="nav-item" role="presentation">
      <a class="nav-link" href="#cocina" role="tab" data-toggle="tab">AP Cocina</a>
    </li>
  </ul>

  <div class="tab-content">
    <div class="tab-pane fade show active" id="wifi" role="tabpanel">
      <h1>Lista de usuarios conectados al WiFi</h1>
      <table class="table table-striped">
        <thead>
          <th>Nombre</th>
          <th>Antena</th>
          <th>IP</th>
          <th>Mac Address</th>
          <th>Transmisi칩n</th>
          <th>Recepci칩n</th>
          <th>Se침al</th>
          <th>Conectado</th>
          <th>Host</th>
          <th>Comentario</th>
        </thead>
        <tbody>
          <% @clients.each do |name, client| %>
            <tr>
              <td><%= name %></td>
              <% [:interface, :address, :mac_address, :tx_rate, :rx_rate, :rx_signal, :uptime,:host_name, :comment].each do |attr| %>
                <td><%= client[attr] %></td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <div class="tab-pane fade" id="internet" role="tabpanel">
      <iframe src="http://192.168.10.1/graphs/iface/ether1/" frameborder="0" style="height: 350px; width: 100%;"></iframe>
    </div>
    <div class="tab-pane fade" id="habitacion" role="tabpanel">
      <iframe src="http://192.168.10.1/graphs/iface/Habitacion%2Dap%2D1/" frameborder="0" style="height: 350px; width: 100%;"></iframe>
    </div>
    <div class="tab-pane fade" id="cocina" role="tabpanel">
      <iframe src="http://192.168.10.1/graphs/iface/Cocina%2DAP%2D1/" frameborder="0" style="height: 350px; width: 100%;"></iframe>
    </div>
  </div>

  <br>
  <% ['Ping 8.8.8.8', 'Ping DigitalOcean', 'Ping Interno', 'speedtest', 'fast'].each do |type| %>
    <hr>

    <h1><%= type.capitalize %></h1>
    <div class="<%= type.downcase.gsub(/\W/, '-') %>">
      <div class="spinner-border" role="status">
        <span class="sr-only">Cargando...</span>
      </div>
    </div>
  <% end %>

  <script src="/assets/jquery.js" type="text/javascript"></script>
  <script src="/assets/bootstrap.js" type="text/javascript"></script>
  <script src="/assets/async-content.js" type="text/javascript"></script>
  <br>
  <br>
  <br>
  <br>
  <br>
  <br>
</body>
</html>
